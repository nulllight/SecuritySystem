@model SecureSystem.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Добавление ключа";
}
<h2>Добавление ключа доступа для пользователя @User.Identity.Name</h2>
<form asp-action="AddKey" asp-controller="Profile">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Key" class="control-label">Введите ключ</label>
        <input type="text" asp-for="Key" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>