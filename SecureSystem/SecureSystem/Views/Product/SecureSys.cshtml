@using SecureSystem.Models
@{
    ViewBag.Title = "Все продукты";
}
@model IEnumerable<Product>
<a asp-action="Create">Добавить продукт</a>
<table class="table">
    <tr>
        <th>
            <a asp-action="SecureSys" asp-route-sortOrder="@ViewBag.NameSort">
                Имя
            </a>
        </th>
        <th>
            <a asp-action="SecureSys" asp-route-sortOrder="@ViewBag.PriceSort">
                Цена
            </a>
        </th>
        <td>
        Характеристики
        </td>
        <td>
        Описание
        </td>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Specifications</td>
            <td>@product.Discription</td>
            <td>
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.ProductId">Изменить</a> |
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.ProductId">Удалить</a>
            </td>
        </tr>
    }
</table>